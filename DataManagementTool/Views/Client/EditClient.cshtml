@using DataManagementTool.Models
@model ClientViewModel
@{
    ViewData["Title"] = "EditClient";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit Client</h2>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <h2>Edit</h2>
        <ol class="breadcrumb">
            <li>
                Home
            </li>
            <li>
                Clients
            </li>
            <li class="active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Edit Client</h5>
                </div>
                <div class="ibox-content">
                    <form data-ajax="true"  asp-controller="Client" asp-action="EditClient" data-ajax-success="customClientList.onSuccessEdit" data-ajax-content-Type="application/json" data-ajax-failure="onFailedEdit">
                        <input type="hidden" id="hdnClientId" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control diabledInputEmail" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Company" class="control-label"></label>
                            <input asp-for="Company" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="AddressStreet" class="control-label"></label>
                            <input asp-for="AddressStreet" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="AddressStreet2" class="control-label"></label>
                            <input asp-for="AddressStreet2" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="AdditionalDetails" class="control-label"></label>
                            <input asp-for="AdditionalDetails" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PostalAddress" class="control-label"></label>
                            <input asp-for="PostalAddress" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="PostalCode" class="control-label"></label>
                            <input asp-for="PostalCode" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Update" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/customJs/ManageClient.js"></script>
}

